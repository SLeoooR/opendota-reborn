<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:ignore="HardcodedText"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnHerald"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnGuardian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnCrusader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnArchon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnLegend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnAncient"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnDivine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnImmortal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_button" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_card_color"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvHeroHeader"
                android:text="HERO"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvPickHeader"
                android:text="PICK%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvWinHeader"
                android:text="WIN%"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:padding="8dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:dividerColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/heroes_turbo_list_item"
            android:id="@+id/rvPlayerHeroes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/app_card_color" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>